    </sales_email_order_invoice_items>

    <sales_email_order_shipment_items>
        <reference name="items">
            <action method="addItemRender">
                <type>aw_giftcard</type>
                <block>aw_giftcard/frontend_sales_order_item_renderer_print</block>
