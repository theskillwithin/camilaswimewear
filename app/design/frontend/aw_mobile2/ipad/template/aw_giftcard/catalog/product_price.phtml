?><?php
$_product = $this->getProduct();
$_id = $_product->getId();
?>
<?php if ($_product->getCanShowPrice() !== false):?>
    <div class="price-box">
        <?php if (($_min = $_product->getData('aw_gc_open_amount_min')) && ($_max = $_product->getData('aw_gc_open_amount_max')) && ($_min == $_max)): ?>
            <span class="price" id="product-price-<?php echo $_id ?><?php echo $this->getIdSuffix() ?>">
            <?php echo Mage::helper('core')->currency($_min, true, false) ?>
        </span>
        <?php elseif (($_min = $_product->getData('aw_gc_open_amount_min')) && $_min != 0): ?>
            <span class="label"><?php echo $this->__('From') ?></span>
            <span class="price" id="min-product-price-<?php echo $_id ?><?php echo $this->getIdSuffix() ?>">
            <?php echo Mage::helper('core')->currency($_min,true,false) ?>
        </span>
        <?php endif; ?>
    </div>
<?php endif; ?>