?><?php
$giftcard = Mage::getSingleton('checkout/session')->getCurrentGiftCard();
Mage::getSingleton('checkout/session')->setCurrentGiftCard(null);
?>
<div class="gift-card-info">
<?php if ($giftcard): ?>
        <p><?php echo $this->__("Gift Card: %s", '<strong class="giftcard-number">' . $giftcard->getCode() . '</strong>'); ?></p>
        <p><?php echo $this->__('Current Balance: %s', '<strong>' . Mage::helper('core')->currency($giftcard->getBalance()) . '</strong>'); ?></p>
        <?php if ($giftcard->getExpireAt()): ?>
            <p><?php echo $this->__('Expires: %s', '<strong>' . $this->formatDate($giftcard->getExpireAt(), 'short') . '</strong>'); ?></p>
        <?php endif; ?>
<?php else: ?>
    <p class="error-msg"><?php echo MAge::registry('aw_gc_check_error') ?></p>
<?php endif; ?>
</div>